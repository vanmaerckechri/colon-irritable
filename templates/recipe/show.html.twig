{% extends 'base.html.twig' %}

{% block title 'Liste les Recettes' %}

{% block body %}
	<h1>{{ recette.titre }}</h1>
	<p>{{ recette.image }}</p>
	<h2>Type de Recette</h2>
	<p>{{ recette.recetteType }}</p>
	<h3>Ingr√©dients</h3>
	{% for ingredient in recette.ingredients %}
		<p>{{ ingredient.contenu }}</p>
	{% endfor %}
	<h3>Etapes</h3>
	{% for etape in recette.etapes %}
		<p>{{ etape.contenu }}</p>
	{% endfor %}
	{% if app.user and app.user == recette.user %}
		<a href="{{ path('recipe.edit', {id: recette.id, slug: recette.slug}) }}">edit</a>
	{% endif %}
{% endblock %}